<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 줄 평이 글 제목 형식으로 들어감"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_review_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 닉네임"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>

                <TextView
                    android:id="@+id/my_review_write_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성일자"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_review_stadium_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기장 이름"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>

                <TextView
                    android:id="@+id/my_review_stadium_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구역"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>

                <TextView
                    android:id="@+id/my_review_game_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기 일자"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정 하기"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제 하기"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
