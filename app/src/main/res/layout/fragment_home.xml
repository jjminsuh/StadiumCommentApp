<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_interest_stadium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_interest_stadium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/stadium_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수원 KT 소닉붐 아레나"
        app:layout_constraintTop_toBottomOf="@+id/text_interest_stadium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/stadium_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="경기도 수원시 권선구 서수원로577번길 171 수원 KT 소닉붐 아레나"
        app:layout_constraintTop_toBottomOf="@id/stadium_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/img_stadium_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_call_24"
        app:layout_constraintTop_toBottomOf="@id/stadium_address"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/stadium_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(031)278-0010"
        app:layout_constraintTop_toBottomOf="@id/stadium_address"
        app:layout_constraintLeft_toRightOf="@id/img_stadium_phone" />

    <TextView
        android:id="@+id/text_my_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_my_game_schedule"
        app:layout_constraintTop_toBottomOf="@id/img_stadium_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2022"
        app:layout_constraintTop_toBottomOf="@id/text_my_game"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2월"
        app:layout_constraintTop_toBottomOf="@id/text_my_game"
        app:layout_constraintLeft_toRightOf="@id/text_year"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_sunday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sunday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_monday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/monday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_sunday" />

    <TextView
        android:id="@+id/text_tuesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tuesday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_monday" />

    <TextView
        android:id="@+id/text_wednesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wednesday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@+id/text_tuesday" />

    <TextView
        android:id="@+id/text_thursday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/thursday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_wednesday" />

    <TextView
        android:id="@+id/text_friday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/friday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_thursday" />

    <TextView
        android:id="@+id/text_saturday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/saturday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_friday"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_sunday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>