<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.example.stadiumcommentapp.ui.common.TitleBarView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_interest_stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_sports_basketball_24"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_title"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_interest_stadium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_interest_stadium"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image_interest_stadium"
        app:layout_constraintBottom_toBottomOf="@id/image_interest_stadium"
        app:layout_constraintLeft_toRightOf="@id/image_interest_stadium"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/interest_stadium_background"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/home_interest_stadium_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_interest_stadium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/stadium_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수원 KT 소닉붐 아레나"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_interest_stadium"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background" />

    <TextView
        android:id="@+id/stadium_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기도 수원시 권선구 서수원로577번길 171 수원 KT 소닉붐 아레나"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/stadium_name"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background" />

    <TextView
        android:id="@+id/text_near_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_near_info"
        android:textSize="10dp"
        android:textColor="@color/gray"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/divider_line_1"
        app:layout_constraintBottom_toBottomOf="@id/divider_line_1"
        app:layout_constraintRight_toLeftOf="@id/divider_line_1"/>

    <ImageView
        android:id="@+id/divider_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_17"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/stadium_address"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background"/>

    <TextView
        android:id="@+id/text_stadium_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_see_stadium_comment"
        android:textSize="10dp"
        android:textColor="@color/gray"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/divider_line_1"
        app:layout_constraintBottom_toBottomOf="@id/divider_line_1"
        app:layout_constraintLeft_toRightOf="@id/divider_line_1"/>

    <TextView
        android:id="@+id/text_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수원 KT 소닉붐"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/divider_line_1"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background"/>

    <TextView
        android:id="@+id/text_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_instagram"
        android:textSize="10dp"
        android:textColor="@color/gray"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/divider_line_2"
        app:layout_constraintBottom_toBottomOf="@id/divider_line_2"
        app:layout_constraintRight_toLeftOf="@id/divider_line_2"/>

    <ImageView
        android:id="@+id/divider_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_17"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_team_name"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background"/>

    <TextView
        android:id="@+id/text_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_see_stadium_comment"
        android:textSize="10dp"
        android:textColor="@color/gray"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/divider_line_2"
        app:layout_constraintBottom_toBottomOf="@id/divider_line_2"
        app:layout_constraintLeft_toRightOf="@id/divider_line_2"/>

    <TextView
        android:id="@+id/text_no_stadium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_no_interest_stadium"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/interest_stadium_background"
        app:layout_constraintLeft_toLeftOf="@id/interest_stadium_background"
        app:layout_constraintRight_toRightOf="@id/interest_stadium_background" />

    <TextView
        android:id="@+id/text_my_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_my_game_schedule"
        app:layout_constraintTop_toBottomOf="@id/interest_stadium_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2022년"
        app:layout_constraintTop_toBottomOf="@id/text_my_game"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2월"
        app:layout_constraintTop_toBottomOf="@id/text_my_game"
        app:layout_constraintLeft_toRightOf="@id/text_year"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_sunday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sunday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_monday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/monday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_sunday" />

    <TextView
        android:id="@+id/text_tuesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tuesday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_monday" />

    <TextView
        android:id="@+id/text_wednesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wednesday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@+id/text_tuesday" />

    <TextView
        android:id="@+id/text_thursday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/thursday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_wednesday" />

    <TextView
        android:id="@+id/text_friday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/friday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_thursday" />

    <TextView
        android:id="@+id/text_saturday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/saturday"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintLeft_toRightOf="@id/text_friday"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sunday"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>