<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수원 KT vs. 원주 DB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:00"
        app:layout_constraintTop_toTopOf="@id/schedule_title"
        app:layout_constraintLeft_toRightOf="@id/schedule_title"/>
    
    <TextView
        android:id="@+id/schedule_stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수원 KT 소닉붐 아레나"
        app:layout_constraintTop_toBottomOf="@id/schedule_title"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/schedule_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직관"
        app:layout_constraintTop_toTopOf="@id/schedule_stadium"
        app:layout_constraintLeft_toRightOf="@id/schedule_stadium" />

    <TextView
        android:id="@+id/schedule_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모 예시 일찍 출발할 것!!"
        app:layout_constraintTop_toBottomOf="@id/schedule_type"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
